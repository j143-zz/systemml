source("scalable_linalg/svd.dml") as svd

test_SVD = function() {

  print("Testing Singlular Value Decomposition.")
  n = 1000
  nb = 100 # smallest block size
  eps = n*n*1e-12; # for larger matrices eps should be larger

  # create a symmetric random matrix
  A = rand(rows=n*n, cols=n, min=-1.0, max=1.0, pdf="uniform")

  [U, S, V] = svd::SingularValueDecomposition(X, nb)

  B = U %*% S %*% t(V);
  
  diff = A - B;
  
  sup_norm = max(abs(diff));
  
  if (sup_norm > eps) {
    print("ERROR: Singular Value decomposition does not reproduce original matrix")
  }
  
}

tmp = test_SVD()
